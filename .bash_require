#!/usr/bin/env bash
# (sourced from .bashrc)

# associative array containing the files that have been required
unset BASH_REQUIRE_FILES
declare -A BASH_REQUIRE_FILES

# source a file if it hasn't already been sourced
require() {
  if [ "${BASH_REQUIRE_FILES["$1"]}" != "cached" ]; then
    BASH_REQUIRE_FILES["$1"]="cached"
    source "$1"
  fi
}
